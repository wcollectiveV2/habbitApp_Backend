{
  "version": 2,
  "buildCommand": "",
  "outputDirectory": ".",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index" },
    { "source": "/health", "destination": "/api/index?route=health" },
    { "source": "/auth/:path*", "destination": "/api/index" },
    { "source": "/habits/:path*", "destination": "/api/index" },
    { "source": "/tasks/:path*", "destination": "/api/index" },
    { "source": "/user/:path*", "destination": "/api/index" },
    { "source": "/challenges/:path*", "destination": "/api/index" },
    { "source": "/social/:path*", "destination": "/api/index" },
    { "source": "/ai/:path*", "destination": "/api/index" },
    { "source": "/protocols/:path*", "destination": "/api/index" },
    { "source": "/groups/:path*", "destination": "/api/index" }
  ]
}
